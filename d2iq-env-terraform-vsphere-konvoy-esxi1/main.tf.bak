provider "vsphere" {
  user           = "administrator@vsphere.sadielo.network"
  password       = "22qnSFDS0*ZS!irw@HG"
  vsphere_server = "VSPHERE.SADIELO.NETWORK"

  # If you have a self-signed cert
  allow_unverified_ssl = true
}

data "vsphere_datacenter" "dc" {
  name = "HomeLab"
}

data "vsphere_datastore" "datastore" {
  name          = "datastore-1TB-SSD-${count.index+1}"
  datacenter_id = "${data.vsphere_datacenter.dc.id}"
}

data "vsphere_resource_pool" "pool" {
  name          = "ResourcePool-${count.index+1}/Resources"
  datacenter_id = "${data.vsphere_datacenter.dc.id}"
}

data "vsphere_network" "network" {
  name          = "VM Network"
  datacenter_id = "${data.vsphere_datacenter.dc.id}"
}

data "vsphere_virtual_machine" "template" {
  name = "cp-template-w-vmtools"
  datacenter_id = "${data.vsphere_datacenter.dc.id}"
}

resource "vsphere_virtual_machine" "vm" {
  name             = "${var.vm_name}-${count.index}"
  resource_pool_id = "${data.vsphere_resource_pool.pool.id}"
  datastore_id     = "${data.vsphere_datastore.datastore.id}"
  count            = "${var.vm_count}"

  num_cpus = 4
  memory   = 16384
  guest_id = "centos7_64Guest"

  network_interface {
    network_id = "${data.vsphere_network.network.id}"
  }

  disk {
    name  = "disk0.vmdk"
    unit_number = 0
    size  = 80
  }

  clone {
    template_uuid = "${data.vsphere_virtual_machine.template.id}"

    customize {
      linux_options{
        host_name = "${var.host_name}${count.index+1}"
        domain = "sadielo.network"
      }
      network_interface {
	ipv4_address = "${var.ip_addr}${count.index+1}"
        ipv4_netmask = "24"
      }

      ipv4_gateway = "192.168.2.26"
      dns_suffix_list = ["sadielo.network"]
      dns_server_list = ["8.8.8.8"]
    }
  }
}
